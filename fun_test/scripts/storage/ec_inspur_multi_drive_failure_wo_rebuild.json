{
  "GlobalSetup": {
    "bootargs": "app=mdt_test,load_mods --serial --memvol --dis-stats --dpc-server --dpc-uart --csr-replay --all_100g",
    "disable_f1_index": 1,
    "f1_in_use": 0,
    // Script won't disturb the syslog_level setting, if it is set to "default". If any other level is needed set this config to that level in int format
    "syslog_level": "default",
    "attach": {"huid": 7, "ctlid": 0, "transport": "TCP", "port": 1099, "nvme_subsystem": "nqn.2017-05.com.fungible:nss-uuid1"},
    "command_timeout": 5,
    "reboot_timeout": 300,
    "csr_network": {
      "0": {
        "test_interface_ip": "20.1.1.1/24",
        "test_interface_mac": "fe:dc:ba:44:66:30",
        "test_net_route": {"net": "29.1.1.0/24", "gw": "20.1.1.2", "arp": "00:de:ad:be:ef:00"},
        "f1_loopback_ip": "29.1.1.1"
      },
      "4": {
        "test_interface_ip": "21.1.1.1/24",
        "test_interface_mac": "fe:dc:ba:44:66:31",
        "test_net_route": {"net": "29.1.1.0/24", "gw": "21.1.1.2", "arp": "00:de:ad:be:ef:00"},
        "f1_loopback_ip": "29.1.1.1"
      }
    }
  },
  "SingleVolumeMultiDriveFailureWithoutBP": {
    "ec_info": {
      "volume_types": {"ndata": "VOL_TYPE_BLK_LOCAL_THIN", "nparity": "VOL_TYPE_BLK_LOCAL_THIN",
                       "ec": "VOL_TYPE_BLK_EC", "lsv": "VOL_TYPE_BLK_LSV", "jvol": "VOL_TYPE_BLK_NV_MEMORY"},
      "volume_block": {"ndata": 4096, "nparity": 4096, "ec": 4096, "lsv": 4096, "jvol": 512},
      "ndata": 4,
      "nparity": 2,
      "capacity": 34359738368,
      "use_lsv": 1,
      "lsv_pct": 0.30,
      "lsv_chunk_size": 128,
      "jvol_size_multiplier": 4,
      "num_volumes": 1
    },
    // timeout used for the storage controller
    "command_timeout": 10,
    "min_timeout": 60,
    "f1_fs_timeout_ratio": [1073741824, 3],
    "fs_cp_timeout_ratio": [1073741824, 15],
    "status_interval": 10,
    "ns_id": 1,
    "io_queues": 0,
    "back_pressure": false,
    "nvme_device": "/dev/nvme",
    "mount_path": "/mnt/ssd",
    "trigger_drive_failure": true,
    // failure mode can take random or fixed as its value. If it is fixed, initialize failure_drive_indicies
    "failure_mode": "random",
    "failure_start_time_ratio": 0.05,
    "fs_type": "ext3",
    "test_volume_start_index": 0,
    "test_file_size": 10737418240,
    // Ensure that dividing block size with the test_file_size doesn't give any fractions
    "dd_create_file": {"input_file": "/dev/urandom", "output_file": "/tmp/input", "block_size": 1048576}
  }
}
