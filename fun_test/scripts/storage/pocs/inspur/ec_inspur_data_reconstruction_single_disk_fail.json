{
  "GlobalSetup": {
    "bootargs": ["app=mdt_test,load_mods cc_huid=3 workload=storage --serial --dpc-server --dpc-uart --all_100g --nofreeze",
      "app=mdt_test,load_mods cc_huid=2 workload=storage --serial --dpc-server --dpc-uart --all_100g --nofreeze"],
    "dut_start_index": 2,
    "host_start_index": 1,
    "update_workspace": false,
    "update_deploy_script": false,
    "funcp_mode": ["ep", "storage"],
    "num_f1_per_fs": 2,
    "num_f1s": 1,
    "num_hosts": 1,
    "fpg_int_prefix": "fpg",
    "disable_f1_index": 0,
    "f1_in_use": 0,
    "load_modules": ["nvme", "nvme_tcp"],
    "huid": 7,
    "ctlid": 0,
    "syslog_level": 2,
    "command_timeout": 5,
    "reboot_timeout": 600,
    "ethernet_adapter": "Mellanox",
    "override_numa_node": {"override": true, "override_node": "NUMA node0 CPU(s)"}
  },
  "DataReconstructionSingleDiskFailure": {
    "ec_info": {
      "volume_types": {
        "ndata": "VOL_TYPE_BLK_LOCAL_THIN",
        "nparity": "VOL_TYPE_BLK_LOCAL_THIN",
        "ec": "VOL_TYPE_BLK_EC",
        "lsv": "VOL_TYPE_BLK_LSV",
        "jvol": "VOL_TYPE_BLK_NV_MEMORY"
      },
      "volume_block": {
        "ndata": 4096,
        "nparity": 4096,
        "ec": 4096,
        "lsv": 4096,
        "jvol": 512
      },
      "ndata": 4,
      "nparity": 2,
      "capacity": 549755813888,
      "use_lsv": 1,
      "lsv_pct": 1,
      "lsv_chunk_size": 128,
      "jvol_size_multiplier": 8,
      "num_volumes": 1
    },
    "num_ssd": 12,
    "command_timeout": 30,
    "iter_interval": 10,
    "ns_id": 1,
    "attach_transport": "TCP",
    "transport_port": 1099,
    "huid": 7,
    "ctlid": 0,
    "nvme_subsystem": "nqn.2017-05.com.fungible:nss-uuid1",
    "nvme_device": "/dev/nvme",
    "io_queues": 16,
    "warm_up_traffic": 1,
    "parallel_warm_up": false,
    "warm_up_fio_cmd_args": {"bs": "1024k", "iodepth": 1, "size": "100%", "rw": "write", "direct": 1, "prio": 0, "cpus_allowed_policy": "split", "timeout": 3600},
    "fio_cmd_args": {"multiple_jobs": "--direct=1 --prio=0 --rw=randrw --rwmixread=70 --ramp_time=10 --cpus_allowed_policy=split --norandommap --randrepeat=0 --cpus_allowed={} --numjobs={} --iodepth={} --bs=4k --io_size={}", "timeout": 420},
    "fio_runtime": 360,
    "fio_run_timeout": 420,
    "fio_size_timeout": 3600,
    "fio_modes": ["randrw"],
    "fio_iodepth": [32],
    "full_run_iodepth": [32],
    "fio_job_name": "inspur_data_reconstruct_single_drive_failure",
    "mpstat_args": {"interval": 60, "output_file": "/tmp/mpstat.out", "cpu_list": "ALL"},
    "iostat_args": {"interval": 1, "output_file": "/tmp/iostat.out"},
    "vp_util_args": {"interval": 60},
    "resource_bam_args": {"interval": 60},
    "collect_network_stats": true,
    "trigger_failure": true,
    "trigger_failure_wait_time": 10,
    // If 'fail_drive' is true, initiate drive failure else initiate plex failure
    "fail_drive": true,
    "trigger_rebuild_wait_time": 10,
    "rebuild_on_spare_volume": true,
    "rebuild_rate": 80,
    "rebuild_timeout": 3600,
    // failure mode can take random or fixed as its value. If it is fixed, initialize failure_drive_index
    "failure_mode": "random",
    //"failure_start_time_ratio": 0.05,
    "test_volume_start_index": 0,
    "status_interval": 10
  }
}
