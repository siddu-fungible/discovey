{
    "GetMethodologyGroupConfigurationCommand": {
        "title": "Schema for GetMethodologyGroupConfigurationCommand.",
        "type": "array",
        "minItems": 1,
        "additionalProperties": false,
        "items": {
            "description": "Group definition.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "description": "Unique ID to identify group.",
                    "type": "string"
                },
                "title": {
                    "description": "Human readable title of group.",
                    "type": "string"
                },
                "icon": {
                    "description": "Icon image filename.",
                    "type": "string"
                },
                "license_feature_id_list": {
                    "description": "Specify list of feature IDs in license files that allow this methodology group to run. If this key is not specified or is empty, no license required to run methodology group.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "hidden": {
                    "description": "Group is hidden if set to true.",
                    "type": "boolean"
                },
                "hardware": {
                    "description": "List of supported hardware types as strings, shown in the webapp.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "methodology_list": {
                    "description": "List of methodologies that belong to this group.",
                    "type": "array",
                    "items": {
                        "description": "Definition of a methodology.",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique methodology key.",
                                "type": "string"
                            },
                            "hidden": {
                                "description": "Methodology is hidden if set to true.",
                                "type": "boolean"
                            },
                            "disabled": {
                                "description": "Methodology is grayed out and not selectable if set to true. If hidden is set to true, this property is not applicable.",
                                "type": "boolean"
                            },
                            "disabled_description": {
                                "description": "Text to describe why methodology is disabled. May be shown in webapp as hover over text.",
                                "type": "string"
                            }
                        },
                        "required": [
                            "key"
                        ]
                    }
                }
            },
            "required": [
                "id",
                "title"
            ]
        }
    }
}