{
    "Interactive_Definition": {
        "title": "Schema for the interactive JSON (spirent.methodology.stm.Interactive). This JSON includes both the full toobar definition and real time results definition.",
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "rt_results": {
                "$ref": "#/InitRealTimeResultsCommand"
            },
            "toolbar": {
                "description": "Full toolbar definition.",
                "additionalProperties": false,
                "required": ["toolbar_items"],
                "properties": {
                    "update_id":
                    {
                        "description": "Internal property. Will be incremented by the back end so the front end gets property change notifications.",
                        "type": "number"
                    },
                    "toolbar_error":
                    {
                        "description": "An optional error string for the toolbar, to be set by the back end and used by the front end.",
                        "type": "string"
                    },
                    "toolbar_items": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "description": "Toolbar item definition. At least one button definition is required. The selected_id defines the ID of the currently selected (or initial) button.",
                                    "additionalProperties": false,
                                    "required": ["selected_id", "type", "text", "buttons"],
                                    "properties": {
                                        "type": {
                                            "description": "This toolbar item is a button. This is a required property for extensibility later.",
                                            "enum": ["BUTTON"],
                                            "default": "BUTTON"
                                        },
                                        "text": {
                                            "description": "The toolbar item text.",
                                            "type": "string"
                                        },
                                        "enable": {
                                            "description": "The enabled state of the button on the toolbar. Default is true (enabled).",
                                            "type": "boolean"
                                        },
                                        "selected_id": {
                                            "description": "The unique ID for the currently selected button (UUID). In the initial definition of the toolbar, this ID represents the first selected button.",
                                            "type": "string"
                                        },
                                        "buttons": {
                                            "description": "The possible buttons to display for this item.",
                                            "type": "array",
                                            "minItems": 1,
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": ["id", "caption", "commands"],
                                                "properties": {
                                                    "id": {
                                                        "description": "The unique ID for the button (UUID).",
                                                        "type": "string"
                                                    },
                                                    "caption": {
                                                        "description": "The button caption.",
                                                        "type": "string"
                                                    },
                                                    "color": {
                                                        "description": "The background color of the button.",
                                                        "enum": ["DEFAULT", "RED", "GREEN"],
                                                        "default": "DEFAULT"
                                                    },
                                                    "commands": {
                                                        "type": "array",
                                                        "minItems": 1,
                                                        "items": {
                                                            "type": "object",
                                                            "properties": {
                                                                "name": {
                                                                    "type": "string"
                                                                },
                                                                "properties": {
                                                                    "type": "object"
                                                                },
                                                                "stop_on_fail": {
                                                                    "description": "Specify if test execution should stop if command fails. Default is true.",
                                                                    "type": "boolean",
                                                                    "default": true
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "Interactive_UI_Toolbar": {
        "title": "Schema for the UI (front end, web app) definition of the interactive toolbar. This definition is slightly different than the full toolbar definition because it doesn't include the buttons list. Also instead of the selected_id property, id is used.",
        "type": "object",
        "additionalProperties": false,
        "required": ["toolbar_items"],
        "properties": {
            "update_id":
            {
                "description": "Internal property. Will be incremented by the back end so the front end gets property change notifications.",
                "type": "number"
            },
            "toolbar_error":
            {
                "description": "An optional error string for the toolbar, to be set by the back end and used by the front end.",
                "type": "string"
            },
            "toolbar_items": {
                "type": "array",
                "minItems": 0,
                "items": {
                    "type": "object",
                    "oneOf": [
                        {
                            "description": "Toolbar item definition. At least one button definition is required. The selected_id defines the ID of the currently selected (or initial) button.",
                            "additionalProperties": false,
                            "required": ["id", "type", "text", "caption", "color"],
                            "properties": {
                                "type": {
                                    "description": "This toolbar item is a button. This is a required property for extensibility later.",
                                    "enum": ["BUTTON"],
                                    "default": "BUTTON"
                                },
                                "text": {
                                    "description": "The toolbar item text.",
                                    "type": "string"
                                },
                                "enable": {
                                    "description": "The enabled state of the button on the toolbar. Default is true (enabled).",
                                    "type": "boolean"
                                },
                                "id": {
                                    "description": "The unique ID for the currently selected button (UUID). In the initial definition of the toolbar, this ID represents the first selected button.",
                                    "type": "string"
                                },
                                "caption": {
                                    "description": "The button caption.",
                                    "type": "string"
                                },
                                "color": {
                                    "description": "The background color of the button.",
                                    "enum": ["DEFAULT", "RED", "GREEN"],
                                    "default": "DEFAULT"
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}