<query-harness xmlns="http://ntaforum.org/2011/harness" harness="http://spirent.com/NTAF/harness/STC/3.80/Routing%20and%20MPLS/Convergence"  xml:lang="en">
<label>Convergence</label>
<helpURI>http://com.fnfr.svt.help/popups/testcenteraction.html</helpURI>
<author>spirent</author>
    <actionDecl name="RoutingConvergenceSetup">
    <label>Setup Routing Convergence Command</label>
    <tooltip>Setup a Convergence Test on Routing Protocols</tooltip>
    <description>Setup a Convergence Test on Routing Protocols</description>
        <parameter  name="ExecuteSynchronous">
            <label>ExecuteSynchronous</label>
            <tooltip>Execute Synchronous</tooltip>
            <description>Execute Synchronous</description>
            <datatype>boolean</datatype>
            <default>false</default>
        </parameter>
        <parameter  name="ProgressCancelled">
            <label>ProgressCancelled</label>
            <tooltip>Progress was Cancelled</tooltip>
            <description>Progress was Cancelled</description>
            <datatype>boolean</datatype>
            <default>false</default>
        </parameter>
        <parameter  name="TestProtocol">
            <label>TestProtocol</label>
            <tooltip>Test Protocol</tooltip>
            <description>Test Protocol</description>
            <datatype>string</datatype>
            <default>BGP</default>
            <allowedValue label="BGP">BGP</allowedValue>
            <allowedValue label="OSPFV2">OSPFV2</allowedValue>
            <allowedValue label="OSPFV3">OSPFV3</allowedValue>
            <allowedValue label="ISIS">ISIS</allowedValue>
            <allowedValue label="RIP">RIP</allowedValue>
        </parameter>
        <parameter  name="IpVersion">
            <label>IpVersion</label>
            <tooltip>IP Version</tooltip>
            <description>IP Version</description>
            <datatype>string</datatype>
            <default>IPV4</default>
            <allowedValue label="IPV4">IPV4</allowedValue>
            <allowedValue label="IPV6">IPV6</allowedValue>
        </parameter>
        <parameter  name="IngressRouterList">
            <label>IngressRouterList</label>
            <tooltip>Ingress Routers</tooltip>
            <description>Ingress Routers</description>
            <datatype>string</datatype>
            <default>0</default>
            <allowedCount>
                <min>0</min>
                <max>65535</max>
            </allowedCount>
        </parameter>
        <parameter  name="EgressRouterList">
            <label>EgressRouterList</label>
            <tooltip>Egress Routers</tooltip>
            <description>Egress Routers</description>
            <datatype>string</datatype>
            <default>0</default>
            <allowedCount>
                <min>0</min>
                <max>65535</max>
            </allowedCount>
        </parameter>
        <parameter  name="SecondaryEgressRouterList">
            <label>SecondaryEgressRouterList</label>
            <tooltip>Secondary Egress Routers</tooltip>
            <description>Secondary Egress Routers</description>
            <mandatory>false</mandatory>
            <datatype>string</datatype>
            <default>0</default>
            <allowedCount>
                <min>0</min>
                <max>65535</max>
            </allowedCount>
        </parameter>
        <parameter  name="StreamBlockList">
            <label>StreamBlockList</label>
            <tooltip>StreamBlocks associated with this test</tooltip>
            <description>StreamBlocks associated with this test</description>
            <datatype>string</datatype>
            <default>0</default>
            <allowedCount>
                <min>0</min>
                <max>65535</max>
            </allowedCount>
        </parameter>
        <parameter  name="MaxConvergenceTime">
            <label>MaxConvergenceTime</label>
            <tooltip>Maximum Convergence Time (secs) </tooltip>
            <description>Maximum Convergence Time (secs) </description>
            <datatype>integer</datatype>
            <default>70</default>
        </parameter>
        <responseDecl>
        <item  name="State">
            <label>State</label>
            <default>INIT</default>
            <datatype>string</datatype>
            <allowedValue label="INIT">INIT</allowedValue>
            <allowedValue label="START">START</allowedValue>
            <allowedValue label="RUNNING">RUNNING</allowedValue>
            <allowedValue label="PAUSED">PAUSED</allowedValue>
            <allowedValue label="PRECOMPLETE">PRECOMPLETE</allowedValue>
            <allowedValue label="COMPLETED">COMPLETED</allowedValue>
            <allowedValue label="FAILED">FAILED</allowedValue>
            <allowedValue label="VALIDATION_ERROR">VALIDATION_ERROR</allowedValue>
        </item>
        <item  name="Status">
            <label>Status</label>
            <default></default>
            <datatype>string</datatype>
        </item>
        <item  name="StartTime">
            <label>StartTime</label>
            <default>0</default>
            <datatype>decimal</datatype>
        </item>
        <item  name="EndTime">
            <label>EndTime</label>
            <default>0</default>
            <datatype>decimal</datatype>
        </item>
        <item  name="ElapsedTime">
            <label>ElapsedTime</label>
            <default>0</default>
            <datatype>decimal</datatype>
        </item>
        <item  name="ProgressDisplayCounter">
            <label>ProgressDisplayCounter</label>
            <default>true</default>
            <datatype>boolean</datatype>
        </item>
        <item  name="ProgressStepsCount">
            <label>ProgressStepsCount</label>
            <default>1</default>
            <datatype>integer</datatype>
        </item>
        <item  name="ProgressCurrentStep">
            <label>ProgressCurrentStep</label>
            <default>1</default>
            <datatype>integer</datatype>
        </item>
        <item  name="ProgressCurrentStepName">
            <label>ProgressCurrentStepName</label>
            <default></default>
            <datatype>string</datatype>
        </item>
        <item  name="ProgressMaxValue">
            <label>ProgressMaxValue</label>
            <default>0</default>
            <datatype>integer</datatype>
        </item>
        <item  name="ProgressCurrentValue">
            <label>ProgressCurrentValue</label>
            <default>0</default>
            <datatype>integer</datatype>
        </item>
        </responseDecl>
    </actionDecl>

